<%- include ('partials/header') %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="/" class="navbar-brand">YelpCamp</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/">login</a></li>
                <li><a href="/">Sign up</a></li>
                <li><a href="/">logout</a></li>
            </ul>
        </div>
    </div>

</nav>

<div class="container">

    <header class="container-fluid bg-dark text-light p-5">
        <h1 class="display-4">Welcome to YelpCamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>

            <a class="btn btn-primary btn-sm" href="/campgrounds/new">Add new Campground</a>
        </p>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        
        <% campgrounds.forEach((el)=>{  %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">

                    <img src="<%= el.image %>" alt="foto"> 
                    <div >
                        <h4><%= el.name %></h4>

                    </div>
                </div>
            </div>
        <%}) %>

    </div>
    
</div>


<%- include ('partials/footer') %>